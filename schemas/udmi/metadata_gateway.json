{
  "title": "Gateway metadata snippet",
  "type": "object",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "is_gateway": {
      "type": "boolean"
    },
    "gateway_id": {
      "type": "string",
      "pattern": "^[A-Z]{3}-[1-9][0-9]{0,2}$"
    }
  },
  "oneOf": [
    {
      "required": ["is_gateway"]
    },
    {
      "required": ["gateway_id"]
    }
  ]
}
